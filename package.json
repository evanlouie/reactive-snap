{
  "name": "reactive-snap",
  "version": "1.0.0",
  "description": "React static site generator",
  "main": "index.js",
  "author": "Evan Louie <evlouie@gmail.com> (https://evanlouie.com)",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md,css,scss}'",
    "lint": "tslint --fix 'src/**/*.{ts,tsx}'",
    "build": "ts-node ./src",
    "server": "http-server ./out -p 9999",
    "watch": "nodemon --watch ./src -e ts,tsx,json,md,scss,css --exec 'ts-node' ./src/index.tsx",
    "dev": "concurrently 'npm run watch' 'npm run server'"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "html-minifier": "^3.5.15",
    "immutable": "^4.0.0-rc.9",
    "marked": "^0.3.19",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "turbolinks": "^5.1.1"
  },
  "devDependencies": {
    "@types/glob": "^5.0.35",
    "@types/highlight.js": "^9.12.2",
    "@types/html-minifier": "^3.5.2",
    "@types/marked": "^0.3.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node-sass": "^3.10.32",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "concurrently": "^3.5.1",
    "http-server": "^0.11.1",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "ts-node": "^6.0.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all"
  }
}
