{
  "name": "reactive-snap",
  "version": "1.0.0",
  "description": "React static site generator",
  "main": "index.js",
  "author": "Evan Louie <evlouie@gmail.com> (https://evanlouie.com)",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md,css,scss}'",
    "lint": "tslint --fix 'src/**/*.{ts,tsx}'",
    "build": "ts-node ./src",
    "server": "serve -l 9999 ./out",
    "watch": "nodemon --watch ./src -e ts,tsx,json,md,scss,css --exec 'ts-node' ./src/index.tsx",
    "dev": "concurrently 'npm run watch' 'npm run server'"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "html-minifier": "^3.5.19",
    "immutable": "^4.0.0-rc.9",
    "js-yaml": "^3.12.0",
    "marked": "^0.4.0",
    "node-sass": "^4.9.2",
    "normalize.css": "^8.0.0",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "turbolinks": "^5.1.1",
    "uglify-js": "^3.4.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^5.0.35",
    "@types/highlight.js": "^9.12.3",
    "@types/html-minifier": "^3.5.2",
    "@types/js-yaml": "^3.11.2",
    "@types/marked": "^0.4.0",
    "@types/node": "^10.5.2",
    "@types/node-sass": "^3.10.32",
    "@types/prettier": "^1.13.2",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/uglify-js": "^3.0.3",
    "concurrently": "^3.6.1",
    "nodemon": "^1.18.3",
    "serve": "^9.3.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
